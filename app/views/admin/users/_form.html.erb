<%= form_for :user, as: :post, namespace: admin_path, method: :put do |form| %>
    <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="d-grid gap-2 col-6 mx-auto">
    <div class="mb-3">
      <%= form.label :email, style: "display: block", :class => "form-label"%>
      <%= form.email_field :email, :class => "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :role, style: "display: block", :class => "form-label"%>
      <%= form.select :role, User.roles, :class => "form-select" %>
    </div>

    <div class="mb-3">
      <%= form.label :user_restaurant, style: "display: block", :class => "form-label"%>
      <%= form.check_box(:user_restaurant, {}, "True", "False") %>
    </div>

    <div class="mb-3">
      <%= form.label :user_brand, style: "display: block", :class => "form-label"%>
      <%= form.check_box(:user_brand, {}, "True", "False") %>
    </div>

    <div class="mb-3">
      <%= form.label :admin, style: "display: block", :class => "form-label"%>
      <%= form.check_box(:admin, {}, "True", "False") %>
    </div>
    <%= form.submit :class => "btn btn-outline-dark" %>
  </div>
<% end %>
