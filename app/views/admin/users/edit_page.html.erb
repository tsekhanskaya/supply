<div class="prdt">
  <div class="container">
    <div class="prdt-top">
      <div class="col-md-12">
        <div class="product-one signup">
          <div class="register-top heading">
            <h2 class="text-center">EDIT PROFILE FOR <%= @user.email %></h2>
          </div>

          <div class="register-main">
            <div class="col-md-6 account-left">
              <%= simple_form_for(@user, url: "/admin/user/edit/#{@user.id}", html: {method: :put}) do |f| %>
                <%= f.error_notification %>
                <div class="form-group has-feedback">
                  <%= f.input :email,
                              required: false,
                              autofocus: true,
                              input_html: {class: "form-control"}
                  %> 
                </div>
                <div class="form-group has-feedback">
                  <%= f.input :password,
                              required: true,
                              input_html: {autocomplete: "new-password", class: "form-control"}
                  %> 
                </div>
                <div class="form-actions">
                  <%= f.input :role, as: :radio_buttons,
                              collection: [[true, 'Yes'] ,[false, 'No']], 
                              label_method: :second,
                              value_method: :first,
                              checked: @admin %>
                </div>
                <div class="form-actions">
                  <%= f.button :submit, "Update", class: "btn btn-success" %>
                </div>
              <% end %>
              <br>
              <div style="height:10px;font-size:10px;">&nbsp;</div>
              <%= link_to "Delete account", "/admin/user/#{@user.id}",
                    data: {confirm: "Are you sure?"}, method: :delete, class: "btn btn-danger" %>
              <div style="height:10px;font-size:10px;">&nbsp;</div>
              <%= link_to "Back", 'javascript:history.back()', class: "btn btn-default" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>