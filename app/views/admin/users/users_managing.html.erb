<div class="single">
  <div class="single-main">
    <div class="register-top heading">
      <p><h2 class="text-center">EDIT USERS</h2></p>
    </div>
    <div class="container">
      <div class="table">
        <table id="productSizes" class="table table-bordered table-hover">
          <thead>
            <tr>
              <th style="width:5%">â„–</th>
              <th style="width:25%">Email</th>
              <th style="width:10%">Admin</th>
              <th colspan="3" style="width:10%"></th>
            </tr>
          </thead>
          <tbody>
          <% i=0 %>
          <% @users.each do |user| %>
            <tr>
              <td scope="row"><strong><%= i+=1 %></strong></th>
              <td><%= user.email %></td>
              <td><%= user.admin? %></td>
              <td><%= link_to 'Show', "/admin/user/#{user.id}" %></td>
              <td><%= link_to 'Edit', "/admin/user/edit/#{user.id}" %></td>
              <td><%= link_to 'Destroy', "/admin/user/#{user.id}", :confirm => 'Are you sure?',
                    :method => :delete %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
</div>