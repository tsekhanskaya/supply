<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <%= image_tag(brand.img, alt: "", class: "img-fluid rounded-start") %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title text-center"><%= brand.title %></h5>
        <hr>
        <p class="card-text"><%= brand.description %></p>
        <p class="card-text"><small class="text-muted"><%= brand.address %></small></p>
      </div>
    </div>
  </div>
</div>