<%# @order_items.each do |item| %>
<!--  <h3><%#= item.product.title %></h3>-->
<!--  <h3><%#= item.product.price %></h3>-->
  <%#= form_with model: item do |f| %>
    <%#= f.hidden_field :product_id, value: item.product.id %>
    <%#= f.number_field :quantity, value: item.quantity.to_i %>
    <%#= f.submit "Update Cart" %>
    <%#= link_to "Remove Items", item, method: :delete, remote: true %>
  <%# end %>
<!--  <h2>Subtotal: <%#= item.total %></h2>-->
<%# end %>

<div class="container text-center">
  <div class="row">
    <div class="col">Title</div>
    <div class="col">Price</div>
    <div class="col">Quantity</div>
    <div class="col"></div>
    <div class="col"></div>
    <div class="col">Subtotal</div>
  </div>
  <div class="row">
    <% @order_items.each do |item| %>
      <div class="col">
        <%= item.product.title %>
      </div>
      <div class="col">
        <%= item.product.price %>
      </div>
      <%= form_with model: item do |f| %>
      <%= f.hidden_field :product_id, value: item.product.id %>
          <div class="col">
            <%= f.number_field :quantity, value: item.quantity.to_i %>
          </div>
          <div class="col">
            <%= f.submit "Update Cart", :class => "btn btn-outline-secondary" %>
          </div>
          <div class="col">
            <%= link_to "Remove Items", item, method: :delete, remote: true, :class => "btn btn-outline-danger" %>
          </div>
      <% end %>
      <div class="col">
        Subtotal: <%= item.total %>
      </div>
    <% end %>
  </div>
</div>

