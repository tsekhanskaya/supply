<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <%= link_to(image_tag(restaurant.img, alt: "", class: "img-fluid rounded-start"), restaurant) %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title text-center"><%= restaurant.title %></h5>
        <hr>
        <p class="card-text"><%= restaurant.description %></p>
        <p class="card-text"><small class="text-muted"><%= restaurant.address %></small></p>
      </div>
      <div class="card-footer text-center">
        <% if restaurant.latitude.nil? or restaurant.longitude.nil? %>
          Нет координат
        <% else %>
          <iframe src="//maps.google.com/maps?q=<%= restaurant.latitude %>,<%= restaurant.longitude %>&z=16&output=embed" height="450" width="600"></iframe>
        <% end %>
      </div>
    </div>
  </div>
</div>
