<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <%= link_to(image_tag(restaurant.img, alt: "", class: "img-fluid rounded-start"), restaurant) %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title text-center"><%= restaurant.title %></h5>
        <hr>
        <p class="card-text"><%= restaurant.description %></p>
        <p class="card-text"><small class="text-muted"><%= restaurant.address %></small></p>
      </div>
    </div>
  </div>
</div>
